<!DOCTYPE html>
<html>
<head>
  <title>[plan]-i-fication<%= @title ? " :: " + @title : "" %></title>
  <%= stylesheet_link_tag :all %>
  <%= javascript_include_tag :defaults %>
  <%= csrf_meta_tag %>
</head>
<body>
	<div id="container">
		<div id="header" class="shadow">
			<a href="/" id="site_label">[plan]-i-fication</a>
			<div id="site_links"><%= logged_in? ? link_to("home", home_path) + link_to("logout", "/logout") : link_to("login", "/login") + link_to("signup", "/signup") %></div>
		</div>
		
		<div id="flash_messages">
			<%= render :partial => "application/update_flash" %>
		</div>
		
		<div id="content">
			<%= yield %>
		</div>
		
		<div id='footer'>&copy; 2010 | <a href="mailto:mnunes@bennington.edu">Matt Nunes</a>
	</div>
</body>
</html>
