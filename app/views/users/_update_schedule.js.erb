<% @week = {}; classes = []; %>
<% current_user_credits = current_user.credits.to_f %>
<% @courses.each do |course| %>
	<% course.time_periods.each do |tp|
		color = random_rgb()
		start = tp.t_start_h.to_i + (tp.t_start_m.to_i / 60.0)
		len = (tp.t_end_h.to_i + (tp.t_end_m.to_i / 60.0)) - start
		
		top = 21 + ((start - 7) * 25)
		height = (len * 25) - 6
		
		block = content_tag :div, course.code + " " + course.title,
			:class => "time-block course_#{course.id}", :id => "course_#{course.id}",
			:style => "top: #{top}px; height: #{height}px; background-color: ##{color}"
	
		height = (course.credits / current_user_credits) * 100
		class_block = content_tag :div, (course.title + "<br />" + course.credits.to_s + 
		" credits").html_safe, :class => "time-block course_#{course.id}", 
		:id => "course_#{course.id}",
		:style => "height: #{height}%; background-color: ##{color}"
				
		classes << class_block
		
		tp.days.each do |d| 
			if @week[d]
				@week[d] << block
			else
				@week[d] = [block]
			end
		end
	end %>
<% end %>


<%= content_tag :script, :type => 'text/Javascript' do %>
	$(document).ready( function() {
		<% @week.each do |k, v| %>
		$('div#<%= k %>').html( $('div#<%= k %>').html() + "<%= escape_javascript( raw( v.join() ) )%>");
		<% end %>
		
		$('#total-credits').html("<%= raw( escape_javascript( current_user.credits.to_s ) ) %> credits");
		$('#class-list').html("<%= raw( escape_javascript( classes.join("\n") ) ) %>");
	});
<% end %>