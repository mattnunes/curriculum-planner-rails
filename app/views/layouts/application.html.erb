<!DOCTYPE html>
<html>
<head>
  <title>Curriculum<%= @title ? " :: " + @title : "" %></title>
  <%= stylesheet_link_tag :all %>
  <%= javascript_include_tag :defaults %>
  <%= csrf_meta_tag %>
</head>
<body>
	<div id="container">
		<div id="header">
			<div id="site_label">[plan]-i-fication</div>
			<div id="site_links"><%= logged_in? ? link_to("profile", "/profile") : link_to("login", "/login") + link_to("signup", "/signup") %></div>
		</div>
		<% flash.each do |key, msg| %>
		    <%= content_tag :div, msg, :class => [key, " message"], :id => "notice_ #{key}" %>
		<% end %>
		<div id="content">
			<br />
			<%= yield %>
		</div>
		
		<div style="clear: both; text-align: center">&copy; 2010 | <%= logged_in? ? link_to("logout", "/logout") : link_to("login", "/login") %>
	</div>
</body>
</html>
